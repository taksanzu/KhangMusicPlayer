<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mymusicappplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo"
        android:name=".MusicplayerActivity.ApplicationClass"
        android:launchMode="singleTask"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyMusicAppPlayer"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MusicplayerActivity.MusicPlayerActivity"/>
        <service android:name=".HomeActivity.MusicServiceHome" android:enabled="true" />
        <receiver android:name=".HomeActivity.NotificationReciverHome" android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="NEXT"/>
                <action android:name="PREVIOUS"/>
                <action android:name="PLAY"/>
            </intent-filter>
        </receiver>
        <service android:name=".FolderActivity.MusicServiceFolder" android:enabled="true" />
        <receiver android:name=".FolderActivity.NotificationReciverFolder" android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="NEXT"/>
                <action android:name="PREVIOUS"/>
                <action android:name="PLAY"/>
            </intent-filter>
        </receiver>
    </application>
    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
</manifest>